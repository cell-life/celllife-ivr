<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="org.celllife.ivr.pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.celllife.ivr.domain.contact.Contact</class>
        <class>org.celllife.ivr.domain.message.CampaignMessage</class>
        <class>org.celllife.ivr.domain.campaign.Campaign</class>
        <class>org.celllife.ivr.domain.callog.CallLog</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    </persistence-unit>

    <persistence-unit name="org.celllife.ivr.verboice.pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.celllife.ivr.domain.verboice.contacts.Contacts</class>
        <class>org.celllife.ivr.domain.verboice.contactaddresses.ContactAddresses</class>
        <class>org.celllife.ivr.domain.verboice.persistedvariables.PersistedVariables</class>
        <class>org.celllife.ivr.domain.verboice.projectvariables.ProjectVariables</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    </persistence-unit>

</persistence>